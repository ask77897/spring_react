<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>Insert title here</title>
	<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.js"></script>
</head>

<body>
	<h1>상품검색</h1>
	<form name="frm">
		<input name="query"/>
		<button>검색</button>
	</form>
	<table id="tbl_shop" border="1"></table>
	<div>
		<button id="prev">이전</button>
		<span id="page">1</span>
		<button id="next">다음</button>
	</div>
	
</body>
<script id="temp_shop" type="x-handlebars-template">
	{{#each items}}
		<tr>
			<td>{{productId}}</td>
			<td><img src="{{image}}" width="30"/></td>
			<td>{{{title}}}</td>
			<td>{{lprice}}</td>
			<td>{{maker}}</td>
		</tr>
	{{/each}}
</script>
<script>
	let page = 1;
	let size = 5;
	let query = "노트북";
	getList();
	$("#next").on("click", function(){
		page++;
		getList();
	})
	$("#prev").on("click", function(){
		page--;
		getList();
	})
	$(frm).on("submit", function(e){
		e.preventDefault();
		query = $(frm.query).val();
		page=1;
		getList();
	})
	function getList(){	
		$.ajax({
			type:'get',
			url:"/search/list.json",
			dataType:"json",
			data:{page, size, query},
			success:function(data){
				const temp = Handlebars.compile($("#temp_shop").html());
				$("#tbl_shop").html(temp(data));
				$("#page").html(page);
			}
		})
	}
</script>
</html>